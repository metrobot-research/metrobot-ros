<launch>

    <param name="/use_sim_time" value="false" />
    <!--Start Camera-->
    <include file="$(find realsense2_camera)/launch/rs_camera.launch"/>
    <!--Start USV-->
    <include file="$(find localization)/launch/USV/USV.launch"/>
    <!--Recod bag-->
    <arg name="bag_path" default="/media/warren/Data/synchronize/USVparamAdj/1215/1215.bag"/><!-- D盘 -->
<!--    <arg name="topic" default="/camera/depth/color/points"/>&lt;!&ndash; 彩色点云 &ndash;&gt;-->
    <arg name="topic" default="/camera/depth/color/points /camera/color/image_raw"/><!-- 彩色点云及视频 -->
    <node pkg="rosbag" type="record" name="bag_record" args="$(arg topic) -o $(arg bag_path)"/>

</launch>